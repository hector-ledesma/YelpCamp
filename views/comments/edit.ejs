<%include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 class="col-12 mb-3" style="text-align:center;">Edit Comment</h1>
		<div style="width: 30%;margin:0 auto;">
			<form class="col-12" action="/campgrounds/<%= campground_id %>/comments/<%=comment._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type='text' value="<%=comment.text%>" name="comment[text]">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block" type="submit">
					Submit!
					</button>
	
				</div>
				
			</form>
			<a class="col-12" href='/campgrounds'>Go Back!</a>
		</div>
		

		
	</div>
</div>
<%include ../partials/footer %>